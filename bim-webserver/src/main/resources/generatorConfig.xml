<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">


<generatorConfiguration>
  <classPathEntry location="./src/main/lib/mysql-connector-java-5.1.6-bin.jar"/>

  <context id="webserver" targetRuntime="MyBatis3Simple" defaultModelType="flat">
    <property name="beginningDelimiter" value="`"/>
    <property name="endingDelimiter" value="`"/>

    <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin"/>
    <plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
      <property name="searchString" value="Example$"/>
      <property name="replaceString" value="Criteria"/>
    </plugin>

    <commentGenerator>
      <property name="suppressAllComments" value="false"/>
      <property name="suppressDate" value="false"/>
    </commentGenerator>

    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                    connectionURL="jdbc:mysql://127.0.0.1:3306/bim_base?characterEncoding=UTF-8"
                    userId="root"
                    password="root">
    </jdbcConnection>

    <javaTypeResolver>
      <property name="forceBigDecimals" value="true"/>
    </javaTypeResolver>

    <javaModelGenerator targetPackage="com.family.webserver.entity" targetProject="./src/main/java">
      <property name="enableSubPackages" value="true"/>
      <property name="trimStrings" value="true"/>
    </javaModelGenerator>

    <sqlMapGenerator targetPackage="com.family.webserver.mapping" targetProject="./src/main/resources">
      <property name="enableSubPackages" value="true"/>
    </sqlMapGenerator>

    <javaClientGenerator type="XMLMAPPER" targetPackage="com.family.webserver.mapper"
                         targetProject="./src/main/java">
      <property name="enableSubPackages" value="true"/>
    </javaClientGenerator>

    <!-- 表映射的配置-->
    <table tableName="%">
      <ignoreColumn column="update_time"/>
      <ignoreColumn column="create_time"/>
    </table>

  </context>
</generatorConfiguration>
